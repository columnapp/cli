{
  "name": "@columnapp/cli",
  "version": "1.0.0-alpha1",
  "repository": "https://github.com/columnapp/cli",
  "scripts": {
    "test-init": "ts-node init.ts",
    "dev-server": "npx http-server -c-1",
    "test-publish": "ts-node publish.ts whatev --path publish-test/",
    "clean": "rimraf ./dist/",
    "build": "yarn run clean && tsc",
    "prepare": "yarn run build",
    "deploy-local": "yarn run prepare && npm uninstall -g && npm install -g --force",
    "local-publish": "yarn run deploy-local && npx publish",
    "local-init": "yarn run deploy-local && npx init"
  },
  "bin": {
    "init": "./dist/init.js",
    "publish": "./dist/publish.js"
  },
  "author": {
    "email": "hello@column.app",
    "name": "columnapp",
    "url": "https://column.app"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@columnapp/schema": "^0.0.1-alpha4",
    "colors": "^1.4.0",
    "commander": "^9.4.1",
    "enquirer": "^2.3.6",
    "esbuild": "^0.15.13"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
